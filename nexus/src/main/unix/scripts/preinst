#! /bin/sh
# preinst script for nexus
#
# see: dh_installdeb(1)

#set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' 
#        * <new-preinst> `upgrade' 
#        * <old-preinst> `abort-upgrade' 
#
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

create_user_and_group() {
  id nexus > /dev/null 2>&1

  if [ $? -eq 1 ]; then
    addgroup --system nexus >/dev/null
    adduser --system --no-create-home --ingroup nexus --home /usr/lib/nexus nexus > /dev/null 2>&1
  fi
  return 0
}

case "$1" in
    upgrade)
       create_user_and_group
       #if [ -e /etc/init.d/nexus ]; then
         #service nexus stop
       #fi
    ;;

    install)
       create_user_and_group
    ;;

    abort-upgrade|abort-remove)
    ;;

    configure)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

